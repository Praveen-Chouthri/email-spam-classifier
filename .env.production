# Production environment configuration
# Copy this to .env and update values for your production environment

# Flask environment
FLASK_ENV=production
FLASK_APP=wsgi.py
FLASK_DEBUG=False

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING-IN-PRODUCTION
WTF_CSRF_ENABLED=True

# Application settings
APP_NAME=Email Spam Classifier
APP_VERSION=1.0.0
MAX_BATCH_SIZE=1000
CLASSIFICATION_TIMEOUT=3.0
MAX_FILE_SIZE=16777216

# Model settings
MODEL_DIR=models
TRAINED_MODELS_DIR=models/trained
DEFAULT_MODEL=naive_bayes

# Data directories
DATA_DIR=data
UPLOAD_DIR=uploads
RESULTS_DIR=results
LOGS_DIR=logs

# API settings
API_RATE_LIMIT=100 per hour
API_TIMEOUT=30

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=logs/email_classifier.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=10

# Performance settings
WORKERS=4
THREADS=2
TIMEOUT=120
PORT=8000

# Security headers
FORCE_HTTPS=True
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Email notifications (optional)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
# MAIL_FROM_ADDR=noreply@yourdomain.com
# MAIL_TO_ADDRS=admin@yourdomain.com

# SSL certificates (if using HTTPS)
# SSL_KEYFILE=/path/to/private.key
# SSL_CERTFILE=/path/to/certificate.crt

# Monitoring (optional)
# SENTRY_DSN=your-sentry-dsn-here
# PROMETHEUS_METRICS=True

# Systemd service creation
CREATE_SYSTEMD_SERVICE=false