# Vercel Environment Variables
# Copy these to your Vercel dashboard environment variables

FLASK_ENV=production
SECRET_KEY=your-production-secret-key-here
APP_NAME=Email Spam Classifier
APP_VERSION=1.0.0

# Model settings
DEFAULT_MODEL=naive_bayes

# Processing limits
MAX_BATCH_SIZE=100
MAX_FILE_SIZE=16777216
CLASSIFICATION_TIMEOUT=10.0

# API settings
API_RATE_LIMIT=100 per hour
API_TIMEOUT=30

# Logging settings
LOG_LEVEL=INFO

# Security settings
FORCE_HTTPS=True
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Service settings
SERVICE_HEALTH_CHECK_INTERVAL=30
SERVICE_RETRY_ATTEMPTS=3
SERVICE_TIMEOUT=10

# Error handling
ERROR_TRACKING_ENABLED=True
ERROR_PATTERN_LIMIT=100
ERROR_CACHE_DURATION=300

# Dashboard settings
DASHBOARD_REFRESH_INTERVAL=30
DASHBOARD_CACHE_TIMEOUT=300
DASHBOARD_FALLBACK_DATA_ENABLED=True

# Batch processing
BATCH_VALIDATION_STRICT=True
BATCH_CLEANUP_INTERVAL=3600
BATCH_MAX_RETRIES=2
BATCH_PARTIAL_RESULTS_ENABLED=True